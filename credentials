
export MYSQL_USERNAME="yourmysqlusername" 
export PATH=$PATH:MYSQL_USERNAME/bin

export MYSQL_PASSWD="yourmysqlpassword"
export PATH=$PATH:MYSQL_PASSWD/bin 

export BACKUP_PATH="The directory you want to save your backups"
export PATH=$PATH:BACKUP_PATH/bin

export DATABASE_NAME="The name of the database you want to backup"
export PATH=$PATH:DATABASE_NAME/bin